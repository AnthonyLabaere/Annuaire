# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST	/							controllers.Application.login()

GET		/logout						controllers.Application.logOut()

#Affiche la carte
GET   /pays                         controllers.Application.showCarte() 

#Methodes AJAX des Services de connexion a la BDD
POST    /AJAX_listeDesCentraliens                        controllers.ServiceCentralien.AJAX_listeDesCentraliens()
POST    /AJAX_listeDesCentraliensSelonCriteres           controllers.ServiceCentralien.AJAX_listeDesCentraliensSelonCriteres(anneePromotion_ID: String, ecole_ID: String, entreprise_ID: String, secteur_ID: String, pays_nom: String, ville_nom: String)
POST    /AJAX_listeDesAnneesPromotion                    controllers.ServiceAnneePromotion.AJAX_listeDesAnneesPromotion()
POST    /AJAX_listeDesAnneesPromotionSelonCriteres       controllers.ServiceAnneePromotion.AJAX_listeDesAnneesPromotionSelonCriteres(centralien_ID: String, ecole_ID: String, entreprise_ID: String, secteur_ID: String, pays_nom: String, ville_nom: String)
POST    /AJAX_listeDesEcoles                             controllers.ServiceEcole.AJAX_listeDesEcoles()
POST    /AJAX_listeDesEcolesSelonCriteres                controllers.ServiceEcole.AJAX_listeDesEcolesSelonCriteres(centralien_ID: String, anneePromotion_ID: String, secteur_ID: String, pays_nom: String, ville_nom: String)
POST    /AJAX_listeDesEntreprises                        controllers.ServiceEntreprise.AJAX_listeDesEntreprises()
POST    /AJAX_listeDesEntreprisesSelonCriteres           controllers.ServiceEntreprise.AJAX_listeDesEntreprisesSelonCriteres(centralien_ID: String, anneePromotion_ID: String, secteur_ID: String, pays_nom: String, ville_nom: String)
POST    /AJAX_listeDesSecteurs                           controllers.ServiceSecteur.AJAX_listeDesSecteurs()
POST    /AJAX_listeDesSecteursSelonCriteres              controllers.ServiceSecteur.AJAX_listeDesSecteursSelonCriteres(centralien_ID: String, anneePromotion_ID: String, ecole_ID: String, entreprise_ID: String, pays_nom: String, ville_nom: String)
POST    /AJAX_listeDesPays                               controllers.ServicePays.AJAX_listeDesPays()
POST    /AJAX_listeDesPaysSelonCriteres                  controllers.ServicePays.AJAX_listeDesPaysSelonCriteres(centralien_ID: String, anneePromotion_ID: String, ecole_ID: String, entreprise_ID: String, secteur_ID: String)
POST    /AJAX_listeDesVillesDuPays                       controllers.ServiceVille.AJAX_listeDesVillesDuPays(pays_nom: String)
POST    /AJAX_listeDesVillesSelonCriteres                controllers.ServiceVille.AJAX_listeDesVillesSelonCriteres(centralien_ID: String, anneePromotion_ID: String, ecole_ID: String, entreprise_ID: String, secteur_ID: String, pays_nom: String)

# Routing Javascript 
GET     /assets/javascripts/routes  controllers.RoutingAjax.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
