# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST	/							controllers.Application.login()

GET		/logout						controllers.Application.logOut()

POST	/signup						controllers.SignUp.newMember()

GET		/first						controllers.Application.showFirst()

POST	/addCity/:name/:country_id	controllers.Ajax.addCity(name: String, country_id: Integer)

GET		/unusedCityID				controllers.Ajax.unusedCityID()

GET		/loadCityList/:country_id	controllers.Ajax.loadCityList(country_id: Integer)

POST	/addSchool/:name/:city_id	controllers.Ajax.addSchool(name: String, city_id: Integer)

POST	/search						controllers.Search.search()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
